#include <iostream>
using namespace std;
int main() {
	int n;
	cin >> n;
	int a[15][15];
	for (int i = 0; i < n; i++) {
		for (int s = 0; s < n; s++) {
			if (i == s || i == n / 2 || s == n / 2 || i == n - 1 - s) {
				a[i][s] = 1;
			}
			else {
				a[i][s] = 0;
			}
		}
	}
		for (int i = 0; i < n; i++) {
			for (int s = 0; s < n; s++) {
				if (a[i][s] == 0) {
					cout << "." << " ";
				}
				else {
					cout << "*" <<" ";
				}
			}
			cout <<endl;
		}
		return 0;
	
}
